@model List<Zoughaibandco.ViewModel.Client_VM>

@if (Model != null)
{
    if (Model.Count > 0)
    {
        <ul id="sortable" class="ui-sortable">
            @foreach (var client in Model)
            {
                <li>
                    @client.FirstName &nbsp; @client.LastName
                    <a style="position:absolute; right:85px;" href="@Url.Action("EditClient","Admin",new { ClientId = client.Id})">Edit</a>
                    <a style="position:absolute; right:15px;" href="javascript:if (confirm('Are you sure you want to delete this client with all his/her information and history ?')) { DeleteClient(@client.Id) }">Delete</a>
                </li>
            }
        </ul>
    }
}
