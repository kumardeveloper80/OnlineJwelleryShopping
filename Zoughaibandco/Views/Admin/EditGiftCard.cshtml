@model Zoughaibandco.ViewModel.EGiftCard_VM
@{
    ViewBag.Title = "EditGiftCard";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}


@if (Model != null)
{
    <div class="topContainer">
        <div class="toolbar">
            <div class="buttons">
                <input type="button" class="button" id="addItem" value="Save" onclick="UpdateEGiftCard('@Model.EGiftCardId')">
            </div>
        </div>
    </div>

    <form id="EGiftCardForm">
        <div>
            <style type="text/css">
                #flashContent1 {
                    height: 30px;
                    width: 243px;
                    z-index: 0;
                }
            </style>

            <fieldset>
                <div class="editor-label">
                    <label for="SenderFirstName">First Name</label>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.SenderFirstName, new { disabled = "disabled", @readonly = "readonly" })
                </div>

                <div class="editor-label">
                    <label for="SenderLastName">Last Name</label>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.SenderLastName, new { disabled = "disabled", @readonly = "readonly" })
                </div>

                <div class="editor-label">
                    <label for="ToPhoneNo">Phone number</label>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.ToPhoneNo)
                </div>

                <div class="editor-label">
                    <label for="SenderEmail">Email</label>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.SenderEmail, new { @readonly = "readonly" })
                </div>

                <div class="editor-label">
                    <label for="Amount">amount</label>
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.Amount)
                </div>

                <div class="editor-label">
                    <label for="ToFirstName">Recipient First Name</label>
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.ToFirstName)
                </div>

                <div class="editor-label">
                    <label for="ToLastName">Recipient Last Name</label>
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.ToLastName)
                </div>

                <div class="editor-label">
                    <label for="ToEmail">Recipient email</label>
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.ToEmail)
                </div>

                <div class="editor-label">
                    <label for="DeliveryDate">Delivery date</label>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.DeliverDate, new { @class = "ProximaNovaA-Regular left", @readonly = "readonly" })
                </div>

                <div class="editor-label">
                    <label for="Address">Delivery Address</label>
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(x => x.Address, new { @class = "ckeditor" })
                </div>

                <div class="editor-label">
                    <label for="Description">Some Sweet Words</label>
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(x => x.Description, new { @class = "ckeditor" })
                </div>

                <div class="editor-label">
                    <label for="IsDeliver">Deliver Card</label>
                </div>
                <div class="editor-field">
                    @Html.CheckBoxFor(m => m.IsDeliver)
                </div>

                <div class="editor-label">
                    <label for="IsPublished">Is Published</label>
                </div>
                <div class="editor-field">
                    @Html.CheckBoxFor(m => m.IsPublished)
                </div>

                @Html.HiddenFor(x => x.UserId)
                @Html.HiddenFor(x => x.Id)

            </fieldset>
        </div>
    </form>

}
<link href="~/Content/jquery-ui-timepicker-addon.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
<script src="https://cdn.ckeditor.com/4.11.4/standard/ckeditor.js"></script>
<script src="~/Scripts/Admin/EGiftCard_Admin.js"></script>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/Scripts/Custom")
<script>
    $(document).ready(function () {
        $('#DeliverDate').datetimepicker({
            dateFormat: 'dd-mm-yy',
            timeFormat: 'hh:mm:ss',
            minDateTime: 0
        });
        $("#Amount").ForceNumericOnly();
    });
</script>
